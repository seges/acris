<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>sk.seges.corpis</groupId>
	<artifactId>corpis-os</artifactId>
	<version>1.1.0</version>
	<packaging>pom</packaging>

	<parent>
		<groupId>sk.seges.sesam</groupId>
		<artifactId>sesam-os-base-parent</artifactId>
		<version>1.1.4</version>
	</parent>

	<!-- More Project Information -->
	<name>CorpIS Parent</name>
	<description>Parent project for CorpIS</description>
	
	<licenses>
		<license>
			<name>The Apache Software License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
			<distribution>repo</distribution>
		</license>
	</licenses>
	
	<organization>
		<name>Seges s.r.o.</name>
		<url>http://www.seges.sk</url>
	</organization>

	<developers>
		<developer>
			<id>ladislav.gazo</id>
			<email>ladislav.gazo@gmail.com</email>
			<name>Ladislav Gazo</name>
			<organization>Seges</organization>
		</developer>
	</developers>

	<url>http://acris.googlecode.com</url>

	<scm>
		<url>http://acris.googlecode.com/svn/corpis/tags/corpis-os-build/corpis-os-build-1.1.0/1.1.0</url>
		<connection>scm:svn:https://acris.googlecode.com/svn/corpis/tags/corpis-os-build/corpis-os-build-1.1.0/1.1.0</connection>
		<developerConnection>scm:svn:https://acris.googlecode.com/svn/corpis/tags/corpis-os-build/corpis-os-build-1.1.0/1.1.0</developerConnection>
	</scm>
	
	<modules>
		<module>../corpis-test</module>
		<module>../corpis-dao-api</module>
		<module>../corpis-dao-impl</module>
	</modules>

	<properties>
		<repository.type>java</repository.type>
		<repository.project>corpis</repository.project>
	
		<sesam-os.version>1.1.0</sesam-os.version>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<configuration>
					<preparationGoals>install</preparationGoals>
					<tagBase>
						https://acris.googlecode.com/svn/corpis/tags/${pom.artifactId}
					</tagBase>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>sk.seges.sesam</groupId>
				<artifactId>sesam-core</artifactId>
				<version>${sesam-os.version}</version>
			</dependency>
			<dependency>
				<groupId>sk.seges.sesam</groupId>
				<artifactId>sesam-core</artifactId>
				<version>${sesam-os.version}</version>
				<classifier>sources</classifier>
			</dependency>
			
			<dependency>
				<groupId>${pom.groupId}</groupId>
				<artifactId>corpis-dao-api</artifactId>
				<version>${pom.version}</version>
			</dependency>
			<dependency>
				<groupId>${pom.groupId}</groupId>
				<artifactId>corpis-dao-impl</artifactId>
				<version>${pom.version}</version>
			</dependency>		
			<dependency>
				<groupId>${pom.groupId}</groupId>
				<artifactId>corpis-test</artifactId>
				<version>${pom.version}</version>  
				<scope>test</scope>
			</dependency>
			
			<dependency>
				<groupId>dumbster</groupId>
				<artifactId>dumbster</artifactId>
				<version>1.6.1</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-test</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>
</project>
