<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<packaging>pom</packaging>
	<groupId>sk.seges.acris</groupId>
	<artifactId>acris-os-parent</artifactId>	
	<version>1.0.0-SNAPSHOT</version>
	<name>AcrIS Parent</name>

	<parent>
		<groupId>sk.seges.acris</groupId>
		<artifactId>acris-os-gwt-parent</artifactId>
		<version>1.0.15-SNAPSHOT</version>
	</parent>

	<repositories>
		<repository>
			<id>acris-snapshots-repo</id>
  			<url>http://acris.googlecode.com/svn/snapshot-repository/</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
			<releases>
				<enabled>false</enabled>
			</releases>
		</repository>
		<repository>
			<id>acris-releases-repo</id>
  			<url>http://acris.googlecode.com/svn/releases-repository/</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
			<releases>
				<enabled>true</enabled>
			</releases>
		</repository>
	</repositories>

	<modules>
		<module>../acris-benchmark</module>
		<module>../acris-binding</module>
		<module>../acris-callbacks</module>
		<module>../acris-client-core</module>
		<module>../acris-json</module>	
		<module>../acris-common</module>
		<module>../acris-external</module>
		<module>../acris-generator</module>
		<module>../acris-recorder</module>
		<module>../acris-security</module>
		<module>../acris-server-components</module>
	</modules>
	
	<properties>
		<repository.type>java</repository.type>
		<repository.project>acris</repository.project>
		<corpis-os.version>1.0.4-SNAPSHOT</corpis-os.version>
		<sesam-os.version>1.0.6-SNAPSHOT</sesam-os.version>
	</properties>
	
	<dependencyManagement>
		<dependencies>
			<!-- Corpis dependencies -->
			<dependency>
				<groupId>sk.seges.corpis</groupId>
				<artifactId>corpis-dao-impl</artifactId>
				<version>${corpis-os.version}</version>
			</dependency>

			<!-- Sesam dependencies -->
			<dependency>
				<groupId>sk.seges.sesam</groupId>
				<artifactId>sesam-core</artifactId>
				<version>${sesam-os.version}</version>
			</dependency>
			<dependency>
				<groupId>sk.seges.sesam</groupId>
				<artifactId>sesam-core</artifactId>
				<version>${sesam-os.version}</version>
				<classifier>sources</classifier>
			</dependency>

			<!-- Acris dependencies -->
			<dependency>
				<groupId>${pom.groupId}</groupId>
				<artifactId>acris-binding</artifactId>
				<version>${pom.version}</version>
			</dependency>
			<dependency>
				<groupId>${pom.groupId}</groupId>
				<artifactId>acris-binding</artifactId>
				<classifier>sources</classifier>
				<version>${pom.version}</version>
			</dependency>			
			<dependency>
				<groupId>${pom.groupId}</groupId>
				<artifactId>acris-external</artifactId>
				<version>${pom.version}</version>
			</dependency>
			<dependency>
				<groupId>sk.seges.acris</groupId>
  				<artifactId>acris-callbacks</artifactId>
				<version>${pom.version}</version>
			</dependency>
			<dependency>
				<groupId>sk.seges.acris</groupId>
  				<artifactId>acris-callbacks</artifactId>
				<classifier>sources</classifier>
				<version>${pom.version}</version>
			</dependency>
			<dependency>
				<groupId>sk.seges.acris</groupId>
  				<artifactId>acris-common</artifactId>
				<version>${pom.version}</version>
			</dependency>
			<dependency>
				<groupId>sk.seges.acris</groupId>
  				<artifactId>acris-common</artifactId>
				<classifier>sources</classifier>
				<version>${pom.version}</version>
			</dependency>
			<dependency>
				<groupId>sk.seges.acris</groupId>
  				<artifactId>acris-client-core</artifactId>
				<version>${pom.version}</version>
			</dependency>
			<dependency>
				<groupId>sk.seges.acris</groupId>
  				<artifactId>acris-client-core</artifactId>
				<classifier>sources</classifier>
				<version>${pom.version}</version>
			</dependency>
			<dependency>
				<groupId>${pom.groupId}</groupId>
				<artifactId>acris-external</artifactId>
				<classifier>sources</classifier>
				<version>${pom.version}</version>
			</dependency>
			<dependency>
				<groupId>sk.seges.acris</groupId>
  				<artifactId>acris-generator</artifactId>
				<version>${pom.version}</version>
			</dependency>
			<dependency>
				<groupId>sk.seges.acris</groupId>
  				<artifactId>acris-generator</artifactId>
				<classifier>sources</classifier>
				<version>${pom.version}</version>
			</dependency>
			<dependency>
				<groupId>sk.seges.acris</groupId>
  				<artifactId>acris-json</artifactId>
				<version>${pom.version}</version>
			</dependency>
			<dependency>
				<groupId>sk.seges.acris</groupId>
  				<artifactId>acris-json</artifactId>
				<classifier>sources</classifier>
				<version>${pom.version}</version>
			</dependency>
			<dependency>
				<groupId>${pom.groupId}</groupId>
				<artifactId>acris-recorder</artifactId>
				<version>${pom.version}</version>
			</dependency>
			<dependency>
				<groupId>${pom.groupId}</groupId>
				<artifactId>acris-recorder</artifactId>
				<classifier>sources</classifier>
				<version>${pom.version}</version>
			</dependency>			
			<dependency>
				<groupId>${pom.groupId}</groupId>
				<artifactId>acris-security</artifactId>
				<version>${pom.version}</version>
			</dependency>
			<dependency>
				<groupId>${pom.groupId}</groupId>
				<artifactId>acris-security</artifactId>
				<classifier>sources</classifier>
				<version>${pom.version}</version>
			</dependency>			
			<dependency>
				<groupId>${pom.groupId}</groupId>
				<artifactId>acris-server-components</artifactId>
				<version>${pom.version}</version>
			</dependency>
			<dependency>
				<groupId>${pom.groupId}</groupId>
				<artifactId>acris-server-components</artifactId>
				<classifier>sources</classifier>
				<version>${pom.version}</version>
			</dependency>

			<!-- Gilead dependencies -->
			<dependency>
				<groupId>net.sf.gilead</groupId>
				<artifactId>adapter4gwt</artifactId>
				<version>${gilead.version}</version>
			</dependency>

			<!-- Html parser -->
			<dependency>
				<groupId>org.htmlparser</groupId>
				<artifactId>htmlparser</artifactId>
				<version>1.6</version>
			</dependency>
		</dependencies>
	</dependencyManagement>
	
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-source-plugin</artifactId>
			</plugin>
			<plugin>
		        	<groupId>org.apache.maven.plugins</groupId>
			        <artifactId>maven-eclipse-plugin</artifactId>
			        <version>2.7</version>
			        <configuration>
		        		<sourceExcludes>
			        		<sourceExclude>**/emul/**/*.java</sourceExclude>
		          		</sourceExcludes>
		        	</configuration>
	      		</plugin>
		</plugins>
	</build>
</project>
